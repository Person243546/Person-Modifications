<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Star Wars: Rebel Pathfinders</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>16</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>32</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderUniform"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>4</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderUniform"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>8</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/statBases/ArmorRating_Heat</xpath>
					<value>
						<ArmorRating_Heat>0.60</ArmorRating_Heat>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/statBases/Mass</xpath>
					<value>
						<Mass>10</Mass>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
				  <xpath>/Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/apparel/layers</xpath>
				  <value>
					<layers>
						<li>Shell</li>
						<li>Middle</li>
						<li>ShellExtra</li>
					</layers>
				  </value>
				</li>
				
				<li Class="PatchOperationAdd">
				  <xpath>/Defs/ThingDef[defName="CSWPathfinders_RebelPathfinderVest"]/apparel</xpath>
				  <value>
						<bodyPartGroups Inherit="False">
							<li>Torso</li>
							<li>Neck</li>
							<li>Shoulders</li>
							<li>Arms</li>
						</bodyPartGroups>
				  </value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					defName="CSWPathfinders_RebelPathfinderHelmet" or
					defName="CSWPathfinders_RebelPathfinderTrooperHelmet"
					]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>16</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					defName="CSWPathfinders_RebelPathfinderHelmet" or
					defName="CSWPathfinders_RebelPathfinderTrooperHelmet"
					]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>32</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					defName="CSWPathfinders_RebelPathfinderHelmet" or
					defName="CSWPathfinders_RebelPathfinderTrooperHelmet"
					]/statBases/ArmorRating_Heat</xpath>
					<value>
						<ArmorRating_Heat>0.34</ArmorRating_Heat>
					</value>
				</li>
			
			
			</operations>
		</match>
	</Operation>

</Patch>